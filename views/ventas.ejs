<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Mostrar bot√≥n ventas solo si es admin
fetch('/api/session')
  .then(res => res.json())
  .then(data => {
    if (data.rol === 'admin') {
      document.getElementById("menuVentas").style.display = "block";
    }
  });

// Cerrar sesi√≥n
document.getElementById("btnLogout").onclick = () => {
  fetch("/api/logout").then(() => location.href = "/login.html");
};

// Cargar datos de la gr√°fica
async function cargarDatos() {
  const resp = await fetch("/api/ventas");
  const data = await resp.json();

  const ctx = document.getElementById("graficaVentas");
  new Chart(ctx, {
    type: "bar",
    data: {
      labels: data.productos,
      datasets: [{
        label: "Productos vendidos",
        data: data.cantidades,
        backgroundColor: "rgba(186, 135, 68, 0.8)"
      }]
    }
  });
}
cargarDatos();
</script>

</body>
